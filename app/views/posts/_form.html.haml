.form
  - if @post.errors.any?
    %ul.errors
    - @post.errors.full_messages.each do |message|
      .bg-danger.error= message

  = form_for @post do |f|

    .form-group
      = f.label :title, class: 'col-md-2'
      = f.text_field :title, class: 'col-md-8', placeholder: 'Title'

    .form-group
      = f.label :body, class: 'col-md-2'
      = f.text_area :body, class: 'col-md-8', rows: '5', placeholder: 'Content'

    .col-md-12.center.margin-top-20
      = f.submit