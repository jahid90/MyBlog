.form
  .errors
    - if @post.errors.any?
      %ul
      - @post.errors.full_messages.each do |message|
        %li.alert.alert-error= message

  = form_for @post do |f|

    .form-group
      = f.label :title
      %br/
      = f.text_field :title

    .from-group
      = f.label :body
      %br/
      = f.text_area :body

    .form-group
      = f.submit