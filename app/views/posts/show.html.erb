<h2> <%= @post.title %> </h2>

<div> <%= @post.body %> </div>

<%= render 'post_actions' %>

<hr />

<% @post.comments.any? do %>
	<h3>
		What others have to say about this post
	</h3>

	<% @post.comments.each do |comment| %>
		<div class="comment">
			<p class="author"> <%= comment.author %> says: </p>
			<p class="content"> <%= comment.content %> </p>
			<%= button_to "Delete", [@post, comment], confirm: "Are you sure?", method: :delete %>
		</div>
	<% end %>

<% end %>

<%= form_for [@post, @post.comments.build] do |form| %>
	<%= form.label :author, "Name: " %> <br />
	<%= form.text_field :author %> <br />
	<%= form.text_area :content %> <br />
	<%= form.submit %>
<% end %>
